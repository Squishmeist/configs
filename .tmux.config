set -g prefix C-a
set -g terminal-overrides 'xterm*:smcup@:rmcup@'
set -s escape-time 0
set -g default-terminal "${TERM}"

unbind %
bind | split-window -h
bind - split-window -v
bind N break-pane

# Set status bar
set -g status-bg black
set -g status-fg white

# Set window notifications
setw -g monitor-activity on
set -g visual-activity on

# move bar to the top
set -g status-position top

# Automatically set window title
setw -g automatic-rename


set -g default-terminal "screen-256color"


bind -r f run-shell "tmux display-popup -w 70% -h 80% -E "~/.config/tmux/sessioniser""
bind -r t run-shell "~/.config/tmux/go-tests"
bind -r j copy-mode \; send-keys -X page-down
bind -r k copy-mode \; send-keys -X page-up

# Capture all buffer and write it to a file
bind -r o capture-pane -S - \; save-buffer ~/buffer.txt

bind -r = split-window -h

# move focus to split on the right
bind -r l select-pane -R
# move focus to split on the left
bind -r h select-pane -L


# bind q to kill tmux server
bind -r q confirm-before "kill-server"

set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'rose-pine/tmux'

# Other examples:
set -g @rose_pine_variant 'main'

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'

set-window-option -g mode-keys vi
bind-key -T copy-mode-vi v send -X begin-selection
bind-key -T copy-mode-vi v send -X select-line
bind-key -T copy-mode-vi v send -X copy-pipe-and-cancel 'xclip -in -selection clipboard'
